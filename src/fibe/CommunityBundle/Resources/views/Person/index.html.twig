{% extends '::base.html.twig' %}

{% block body -%}
  <h1>Person list</h1>

  <table class="records_list">
    <thead>
    <tr>
      <th>Id</th>
      <th>Label</th>
      <th>Familyname</th>
      <th>Firstname</th>
      <th>Description</th>
      <th>Age</th>
      <th>Openid</th>
      <th>Slug</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
      <tr>
        <td><a href="{{ path('person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.label }}</td>
        <td>{{ entity.familyName }}</td>
        <td>{{ entity.firstName }}</td>
        <td>{{ entity.description }}</td>
        <td>{{ entity.age }}</td>
        <td>{{ entity.openId }}</td>
        <td>{{ entity.slug }}</td>
        <td>
          <ul>
            <li>
              <a href="{{ path('person_show', { 'id': entity.id }) }}">show</a>
            </li>
            <li>
              <a href="{{ path('person_edit', { 'id': entity.id }) }}">edit</a>
            </li>
          </ul>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('person_new') }}">
        Create a new entry
      </a>
    </li>
  </ul>
{% endblock %}
