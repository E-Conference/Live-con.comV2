{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Paper list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Abstract</th>
                <th>Url</th>
                <th>Publisher</th>
                <th>Publishdate</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('paper_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.label }}</td>
                <td>{{ entity.abstract }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.publisher }}</td>
                <td>{{ entity.publishDate }}</td>
                <td>{{ entity.slug }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('paper_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paper_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('paper_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
